{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "useDefineForClassFields": true,

        /* modules */
        "module": "ESNext",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "Bundler",

        /* type checking */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
