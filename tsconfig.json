{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "useDefineForClassFields": true,

        /* modules */
        "module": "ESNext",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "Bundler",

        /* type declaration */
        "declaration": true,
        "declarationDir": "dist",

        /* type checking */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src", "src/vtable/vue/vue-shims.d.ts"],
    "exclude": ["node_modules", "dist"]
}
