{
    "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "lineWidth": 200,
        "indentStyle": "space",
        "indentWidth": 4,
        "attributePosition": "multiline"
    },
    "json": {
        "parser": { "allowComments": true },
        "formatter": {
            "enabled": true
        }
    },
    "files": {
        "ignoreUnknown": true,
        "ignore": ["node_modules/*", "dist/*"]
    }
}
